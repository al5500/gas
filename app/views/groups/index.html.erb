<p id="notice"><%= notice %></p>

<h1>G.A.S</h1>

<table>
  <thead>
    <tr>
      <th>Class</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><% if group.avatar == "" %>
              <img src="/assets/avatar-default.png" width=100 height=100>
            <% else %>
              <img src=<%= group.avatar %>>
            <% end %></td>
        <td><%= link_to group.name, group_path(group) %> </td> 
        <td><%= group.instructor %></td>
        <% if @current_user.present? && @current_user.admin.present? %>
          <td>| <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        <% end %>
      </tr> 
    <% end %>
  </tbody>
</table>

<br>



<% if @current_user.present? && @current_user.admin.present? %>
  <%= link_to 'Add a Class', new_group_path %> <br>
<% end %>
