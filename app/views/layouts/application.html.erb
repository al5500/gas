<!DOCTYPE html>
<html>
<head>
  <title>Gas</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">

  <div class="backgroundContainer"></div>
  <div class="contentContainer">

  <nav>
    <%= link_to 'GA Students Blog', root_path %>
    <% if @current_user.present? %>
      <%= link_to @current_user.name, group_user_path(@current_user.group_id, @current_user) %>
      <%= link_to("Log out #{@current_user.name}", login_path, :method => :delete) %>
      <%= link_to 'New Post', new_group_user_post_path(@current_user.group_id, @current_user.id) %>
    <% else %>
      <%= link_to 'Login', login_path %>
    <% end %>
  
    <%= form_tag(posts_path, :method => "get", id: "search-post", ) do %>
      <%= text_field_tag :search_posts, params[:search], value: params[:search_posts], placeholder: "Search Posts" %>
      <%= submit_tag "Find Post" %>
    <% end %>
    <%= form_tag(users_path, :method => "get", id: "search-user") do %>
      <%= text_field_tag :search_users, params[:search], value: params[:search_users], placeholder: "Search Users" %>
      <%= submit_tag "Find User" %>
    <% end %>
  </nav>

<%= yield %>

  </div>



</body>
</html>
